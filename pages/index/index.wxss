/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.todo {
  margin: 40px;
  display: flex;
  height: 46px;
  align-items: center;
  background: #F5F5F5;
  font-size: 28px;
}

.todo-list {
  display: flex;
  flex-direction: column;
  flex-grow: 2;
}

.todo-item {
  display: flex;
  height: 60rpx;
  position: relative;
}

.todo-check {
  margin-right: 60px;
}